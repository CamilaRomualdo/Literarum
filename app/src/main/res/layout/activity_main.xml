<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    android:layout_width="match_parent"

    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="32dp">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Literarum"
                    android:textColor="#FFFFFF"
                    android:textSize="23dp" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="35dp"
                    android:text="Busque por Letras de Músicas"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_height="62dp"
                    android:layout_width="62dp"
                    android:src="@drawable/play" />

                <EditText
                    android:ems="10"
                    android:hint="Artista/Banda: "
                    android:id="@+id/ET_ArtistName"
                    android:inputType="text"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:layout_width="match_parent"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF" />

                <EditText
                    android:ems="10"
                    android:hint="Música: "
                    android:id="@+id/ET_ArtistSongName"
                    android:inputType="text"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="120dp"
                    android:layout_width="match_parent"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF" />

                <Button
                    android:background="@drawable/button"
                    android:id="@+id/BTN_SearchLyric"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="175dp"
                    android:layout_width="match_parent"
                    android:text="B U S C A R"
                    android:textColor="@color/colorPrimary" />

            </RelativeLayout>

                <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/TV_Lyric"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:padding="16dp"
                    android:textColor="#FFFFFF" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>